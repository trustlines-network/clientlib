{
  "name": "trustlines-clientlib",
  "version": "1.0.1",
  "description": "Client libraray for trustlines network",
  "main": "dist/TLNetwork.js",
  "scripts": {
    "build": "tsc && tsc -m es6 --outDir lib-esm && webpack",
    "build:esm": "tsc -m es6 --outDir lib-esm",
    "lint": "tslint -c tslint.json ./src/**/**.ts ./tests/**/**.ts",
    "lint-fix": "tslint -c tslint.json --fix ./src/**/**.ts ./tests/**/**.ts",
    "test": "mocha --timeout 5000 --require isomorphic-fetch -r ts-node/register tests/**/**.test.ts",
    "test:e2e": "mocha --timeout 10000 --require isomorphic-fetch -r ts-node/register tests/e2e/**.test.ts",
    "test:integration": "mocha --require isomorphic-fetch -r ts-node/register tests/integration/**.test.ts",
    "test:unit": "mocha --require isomorphic-fetch -r ts-node/register tests/unit/**.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trustlines-network/clientlib.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/trustlines-network/clientlib/issues"
  },
  "homepage": "https://github.com/trustlines-network/clientlib#readme",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.4",
    "awesome-typescript-loader": "^3.1.3",
    "chai": "^4.1.2",
    "es6-promise": "^4.1.1",
    "isomorphic-fetch": "^2.2.1",
    "json-server": "^0.11.2",
    "mocha": "^3.5.3",
    "reconnecting-websocket": "^3.0.7",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1",
    "types-ethereumjs-util": "0.0.5",
    "typescript": "^2.4.1",
    "typings": "^2.1.1",
    "webpack": "^2.7.0"
  },
  "dependencies": {
    "bignumber.js": "^5.0.0",
    "chai-as-promised": "^7.1.1",
    "eth-lightwallet": "^3.0.1",
    "ethereumjs-util": "^5.1.2",
    "rxjs": "^5.4.1",
    "simple-jsonrpc-js": "0.0.10"
  }
}
